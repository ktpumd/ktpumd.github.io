---
interface Props {
  title: string;
  backgroundImage: string;
  size?: 'small' | 'large';
}

const { title, backgroundImage, size = 'large' } = Astro.props;
---

<header class={`page-header ${size === 'small' ? 'page-header--small' : ''}`}>
  <div class="page-header__background" style={`background-image: url('${backgroundImage}')`}></div>
  <div class="page-header__overlay"></div>
  <div class="page-header__content">
    <h1 class="page-header__title">{title}</h1>
    <slot />
  </div>
</header>

<style>
  .page-header {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .page-header--small {
    min-height: 50vh;
  }
  
  .page-header__background {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  .page-header__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(245, 166, 35, 0.4) 100%
    );
  }
  
  .page-header__content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--spacing-6);
    max-width: 800px;
    animation: fadeInUp 0.8s ease-out;
  }
  
  .page-header__title {
    color: var(--color-white);
    font-size: var(--font-size-6xl);
    font-weight: 700;
    margin-bottom: var(--spacing-4);
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  @media (max-width: 768px) {
    .page-header {
      min-height: 80vh;
    }
    
    .page-header--small {
      min-height: 40vh;
    }
    
    .page-header__title {
      font-size: var(--font-size-4xl);
    }
  }
</style>
