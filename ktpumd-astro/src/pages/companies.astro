---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="Connect With Us - KTP UMD">
  <Navbar currentPage="/companies" />
  
  <PageHeader 
    title="Connect With Us"
    backgroundImage="/img/contact-us/companies2.jpg"
    size="small"
  />
  
  <main>
    <section class="section">
      <div class="container">
        <div class="content-block text-center">
          <h2 class="section-title">Reaching Out</h2>
          <p class="section-text">
            Kappa Theta Pi is always looking for companies and organizations to host events with
            our members. If your company is interested in holding a tech talk, resume review, information session
            or any other kind of professional event with us, please contact us directly.
          </p>
          <p class="section-text">
            Thank you and we look forward to hearing from you!
          </p>
          
          <a href="mailto:kappathetapiumd@gmail.com" class="contact-button">
            <i class="fa-solid fa-envelope"></i>
            kappathetapiumd@gmail.com
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .content-block {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .section-title {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-6);
    color: var(--color-gray-900);
  }
  
  .section-text {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    line-height: 1.8;
  }
  
  .contact-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-3);
    margin-top: var(--spacing-8);
    padding: var(--spacing-4) var(--spacing-8);
    background: var(--color-primary);
    color: var(--color-white);
    font-size: var(--font-size-lg);
    font-weight: 600;
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-lg);
  }
  
  .contact-button:hover {
    background: var(--color-primary-dark);
    color: var(--color-white);
    transform: translateY(-3px);
    box-shadow: var(--shadow-xl);
  }
  
  .contact-button i {
    font-size: var(--font-size-xl);
  }
</style>
