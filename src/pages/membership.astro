---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
import MemberCard from '../components/MemberCard.astro';
import members from '../data/members.json';

const alumniClasses = Object.keys(members.alumni);
---

<Layout title="Kappa Theta Pi UMD">
  <Navbar currentPage="/membership" />
  
  <PageHeader 
    title="Meet Our Members"
    backgroundImage="/img/bg6new.jpg"
    size="small"
  />
  
  <main>
    <!-- Executive Board -->
    <section class="section">
      <div class="container">
        <h2 class="section-title text-center">Executive Board</h2>
        <div class="member-grid member-grid--exec">
          {members.execBoard.map((member) => (
            <MemberCard 
              firstName={member.firstName}
              lastName={member.lastName}
              role={member.role}
            />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Chairs -->
    <section class="section section--alt">
      <div class="container">
        <h2 class="section-title text-center">Chairs</h2>
        <div class="member-grid member-grid--chairs">
          {members.chairs.map((member) => (
            <MemberCard 
              firstName={member.firstName}
              lastName={member.lastName}
              role={member.role}
            />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Brothers -->
    <section class="section">
      <div class="container">
        <h2 class="section-title text-center">Brothers</h2>
        <div class="member-grid">
          {members.brothers.map((member) => (
            <MemberCard 
              firstName={member.firstName}
              lastName={member.lastName}
            />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Alumni -->
    <section class="section section--alt">
      <div class="container">
        <h2 class="section-title text-center">Alumni</h2>
        
        <div class="alumni-grid">
          {alumniClasses.map((className) => (
            <div class="alumni-class card">
              <h3 class="class-title">{className}</h3>
              <div class="alumni-list">
                {members.alumni[className].map((member) => (
                  <span class="alumni-name">{member.firstName} {member.lastName}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .section-title {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-10);
    position: relative;
    display: inline-block;
  }
  
  .section-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
  }
  
  .member-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--spacing-4);
    justify-items: center;
  }
  
  .member-grid--exec {
    grid-template-columns: repeat(3, 1fr);
    max-width: 900px;
    margin: 0 auto;
  }
  
  .member-grid--chairs {
    grid-template-columns: repeat(5, 1fr);
  }
  
  @media (max-width: 1200px) {
    .member-grid {
      grid-template-columns: repeat(4, 1fr);
    }
    .member-grid--chairs {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  @media (max-width: 992px) {
    .member-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    .member-grid--exec,
    .member-grid--chairs {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .member-grid,
    .member-grid--exec,
    .member-grid--chairs {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  /* Alumni Styles */
  .alumni-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-6);
  }
  
  .alumni-class {
    padding: var(--spacing-6);
  }
  
  .class-title {
    font-size: var(--font-size-xl);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-4);
    text-align: center;
  }
  
  .alumni-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-2);
  }
  
  .alumni-name {
    font-size: var(--font-size-xs);
    color: var(--color-gray-400);
    padding: var(--spacing-1) var(--spacing-2);
    background: var(--color-bg-elevated);
    border-radius: var(--radius-sm);
  }
  
  @media (max-width: 992px) {
    .alumni-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .alumni-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
